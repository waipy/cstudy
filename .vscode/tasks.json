{
    "type": "shell",
    "label": "C/C++: clang build active file",
    "command": "/usr/bin/clang",
    "args": [
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-c",
        "${file}"
    ],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": [
        "$gcc"
    ],
    "group": {
        "kind": "build",
        "isDefault": true
    }
}